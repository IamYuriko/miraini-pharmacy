---
import { getCollection } from "astro:content";
const posts = await getCollection("info");
---

<ul class="border-t-2 border-line">
  {
    posts.slice(0, 3).map((post) => (
      <li class="border-b-2 border-line hover:text-quaternary py-[clamp(1rem,0.736rem+1.13vw,1.75rem)]">
        <a href="/">
          <article>
            <h3>
              <span class="mr-[clamp(1rem,0.582rem+1.78vw,2.188rem)]">
                {post.data.date}
              </span>
              <span>
                <img
                  src={post.data.categoryIcon}
                  alt=""
                  class="w-[20px] align-top inline lg:w-[25px]"
                />
                <span class="ml-m lg:ml-l">{post.data.category}</span>
              </span>
              <span class="block mt-l lg:inline lg:ml-5xl">
                {post.data.title}
              </span>
            </h3>
          </article>
        </a>
      </li>
    ))
  }
</ul>
